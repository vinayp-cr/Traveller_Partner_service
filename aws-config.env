# AWS Configuration for Xeni Hotelier API Deployment
# Copy this file to .env and update the values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id
ENVIRONMENT=production

# ECS Configuration
ECS_CLUSTER_NAME=production-xeni-hotelier-cluster
ECS_SERVICE_NAME=xeni-hotelier-api-service
ECS_TASK_CPU=256
ECS_TASK_MEMORY=512
ECS_DESIRED_COUNT=2

# ECR Configuration
ECR_REPOSITORY_NAME=xeni-hotelier-api

# Application Configuration
XENI_API_KEY=your-xeni-api-key-here
PYTHONPATH=/app

# CloudFormation Stack Name
STACK_NAME=xeni-hotelier-infrastructure

# Load Balancer Configuration
ALB_PORT=80
TARGET_PORT=8000
HEALTH_CHECK_PATH=/health

# Auto Scaling Configuration
MIN_CAPACITY=1
MAX_CAPACITY=5
SCALE_UP_THRESHOLD=70
SCALE_DOWN_THRESHOLD=30

# Logging Configuration
CLOUDWATCH_LOG_RETENTION_DAYS=30
LOG_GROUP_NAME=/ecs/production-xeni-hotelier-api
